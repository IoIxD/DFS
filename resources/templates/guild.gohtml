{{ template "header.gohtml" .}}

<title>{{.Guild.Name}} - DFS</title>
<meta property="og:title" content="{{.Guild.Name}} - DFS">
<meta property="og:type" content="website">
<meta property="og:url" content="http://dfs.ioi-xd.net/{{.Guild.ID}}">

<span class='nav'>
    <b>{{.Guild.Name}}</b>
</span>

<span class='topics'>
    <span class='flex row ' style='-moz-box-ordinal-group: -1'>
        <span class='flex column title'>Forum</span>
        <span class='flex column threadnum'>Posts</span>
    </span>
{{range $i, $forum := .ForumChannels}}
    <span class='flex row' style='-moz-box-ordinal-group: {{$i}}'>
        <span class='flex column title'>
            <a href="/{{$.Guild.ID}}/{{$forum.ID}}"><b>{{$forum.Name}}</b></a>
        </span>
        <span class='flex column threadnum'>
            {{len $forum.Posts}}
        </span>
    </span>
{{end}}
</span>
{{ template "footer.gohtml" .}}
